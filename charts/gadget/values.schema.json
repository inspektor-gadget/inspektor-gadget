{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "required": [
        "hookMode",
        "fallbackPodInformer",
        "containerdSocketPath",
        "crioSocketPath",
        "dockerSocketPath",
        "experimental",
        "eventsBufferLength"
      ],
      "properties": {
        "hookMode": {
          "type": "string",
          "enum": [
            "auto",
            "crio",
            "podinformer",
            "nri",
            "fanotify+ebpf"
          ]
        },
        "fallbackPodInformer": {
          "type": "boolean"
        },
        "containerdSocketPath": {
          "type": "string"
        },
        "crioSocketPath": {
          "type": "string"
        },
        "dockerSocketPath": {
          "type": "string"
        },
        "podmanSocketPath": {
          "type": "string"
        },
        "experimental": {
          "type": "boolean"
        },
        "eventsBufferLength": {
          "type": "string"
        },
        "daemonLogLevel": {
          "type": "string",
          "enum": [
            "trace",
            "debug",
            "info",
            "warning",
            "error",
            "fatal",
            "panic"
          ]
        },
        "verifyGadgets": {
          "type": "boolean"
        },
        "gadgetsPublicKeys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allowedGadgets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "disallowGadgetsPulling": {
          "type": "boolean"
        },
        "mountPullSecret": {
          "type": "boolean"
        },
        "appArmorProfile": {
            "type": "string"
        },
        "otelMetricsListen" : {
          "type": "boolean"
        },
        "otelMetricsAddress" : {
          "type": "string"
        },
        "extraOperatorConfig": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          }
        }
      }
    },
    "image": {
      "type": "object",
      "required": [
        "repository",
        "pullPolicy"
      ],
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      }
    }
  }
}
