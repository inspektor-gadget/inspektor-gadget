+							Version: tc.version,
+							Port:    tc.port,
+							Proto:   tc.network,
+						},
+						Proc:  info.Proc,
+						Error: "",
+					}
+				},
+			)(t, runner.Info, 0, gadgetRunner.CapturedEvents)
+		})
+	}
