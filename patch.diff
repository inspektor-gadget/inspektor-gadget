+func generateEventFromThread(t *testing.T, argv []string) {
+	runtime.LockOSThread()
+	defer runtime.UnlockOSThread()
+
+	args := "["
+	for i, arg := range argv {
+		if i > 0 {
+			args += ", "
+		}
+		args += `"` + arg + `"`
+	}
+	args += "]"
