+func (e *envOperatorInstance) PreStart(gadgetCtx operators.GadgetContext) error {
+	for ds, funcs := range e.fields {
+		for _, f := range funcs {
+			err := ds.Subscribe(f, 0)
+			if err != nil {
+				return err
+			}
+		}
+	}
+	return nil
+}
